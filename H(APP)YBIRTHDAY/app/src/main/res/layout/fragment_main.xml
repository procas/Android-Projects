<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thenewboston.com.happybirthday.MainActivity$PlaceholderFragment"
    android:id="@+id/rel">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fillViewport="true"
        android:id="@+id/scroll"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SWIPE FOR NEXT-->"
        android:id="@+id/swipe"
        android:textStyle="italic"
        android:textColor="#FF901EA5"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true" />

    <VideoView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/videoView"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/play"
        android:layout_toStartOf="@+id/swipe"
        android:layout_alignBottom="@+id/pause" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAUSE"
        android:id="@+id/pause"
        android:layout_alignEnd="@+id/scroll"
        android:layout_toEndOf="@+id/swipe" />

</RelativeLayout>
