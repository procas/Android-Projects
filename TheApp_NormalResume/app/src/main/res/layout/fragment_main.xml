<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/rel"
    tools:context="thenewboston.com.theapp_normalresume.MainActivity$PlaceholderFragment">

    <Button
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mypic"
        android:textStyle="italic"
        android:onClick="openMy"/>

    <TextView
        android:id="@+id/details"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:textStyle="bold"/>

        android:onClick="openMy"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:id="@+id/mypic"
        android:src="@drawable/me"
        android:outlineProvider="bounds"
        />


    <ScrollView

            android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/skill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"/>

    </ScrollView>




    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">


    </ScrollView>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:id="@+id/tab"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="DEGREE"
                    android:padding="6dip"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_column="2"
                    android:text="INSTITUTE"
                    android:padding="6dip"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_column="3"
                    android:text="YEAR"
                    android:padding="6dip"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_column="4"
                    android:text="RESULTS"
                    android:padding="6dip"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_column="5"
                    android:text="REMARKS"
                    android:padding="6dip"
                    android:textStyle="bold"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="BTech"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="2"
                    android:text="SRM UNIVERSITY"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="3"
                    android:text="2016-19"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="4"
                    android:text="9.5 CGPA"
                    android:padding="3dip"
                    />

                <TextView

                    android:layout_column="5"
                    android:text="1. DEPARTMENT FIRST\n2. HACKATHON PARTICIPANT AND RUNNER-UP\n3. NSS CAMPAIGN PART-TAKER"
                    android:padding="6dip"
                    />

            </TableRow>


            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="HSC"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="2"
                    android:text="ST. MICHAEL'S SCHOOL,DURGAPUR"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="3"
                    android:text="2013-15"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="4"
                    android:text="94.75%"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="5"
                    android:text="1. SCHOOL TOPPER\n2. STUDENT OF THE YEAR AWARD WINNER"
                    android:padding="6dip"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:text="ICSE"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="2"
                    android:text="ST. MICHAEL'S SCHOOL, DURGAPUR"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="3"
                    android:text="2010-13"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="4"
                    android:text="90.5%"
                    android:padding="3dip"
                    />
                <TextView
                    android:layout_column="5"
                    android:text="1. FIST CLASS FIRST\n2. PREFECTSHIP AWARDEE"
                    android:padding="6dip"
                    />

            </TableRow>

        </TableLayout>

    </HorizontalScrollView>




</RelativeLayout>
