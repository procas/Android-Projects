<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fac_name"
        android:layout_width="217dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:text="Faculty Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_name" />

    <TextView
        android:id="@+id/sub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="144dp"
        android:autoText="false"
        android:paddingLeft="0dp"
        android:text="Subject Name"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/sub_code"
        app:layout_constraintEnd_toEndOf="@+id/sub_code"
        app:layout_constraintStart_toEndOf="@+id/tm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/sub_code"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="119dp"
        android:layout_marginRight="119dp"
        android:text="subject code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tm"
        app:layout_constraintTop_toBottomOf="@+id/sub_name" />

    <TextView
        android:id="@+id/tm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="35dp"
        android:layout_marginStart="16dp"
        android:text="00:00-00:00"
        app:layout_constraintBottom_toBottomOf="@+id/fac_name"
        app:layout_constraintEnd_toStartOf="@+id/sub_code"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>